@using GrpcDemoService
@page "/counter"
@inject MyGrpcClient client

<PageTitle>Counter</PageTitle>

<h1>Counter</h1>

<p role="status">Current count: @currentCount</p>

<button class="btn btn-primary" @onclick=IncrementCount>Click me</button>

<button class="btn btn-primary" @onclick=HandleGetFullName>GetFullName</button>
<pre>全名: @fullName</pre>

@code {
  int currentCount = 0;
  string fullName = string.Empty;

  void IncrementCount()
  {
    currentCount++;
  }

  async Task HandleGetFullName()
  {
    var reply  = await client.GetFullNameAsync(new SampleRequest { FirstName = "John", LastName = "Big" });
    fullName = reply.FullName;
  }

}
